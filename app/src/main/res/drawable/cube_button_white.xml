<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:startColor="#EEEEEE"
                android:endColor="#BDBDBD" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <stroke android:width="5dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:startColor="#EEEEEE"
                android:endColor="#BDBDBD" />
        </shape>
    </item>


    <item android:state_pressed="false" android:state_activated="false">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:startColor="#FAFAFA" android:endColor="#EEEEEE" />
        </shape>
    </item>
</selector>