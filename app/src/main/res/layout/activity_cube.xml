<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".manual.CubeActivity" >

    <ImageView
        android:id="@+id/background"
        android:src="@drawable/ic_appicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:baselineAlignBottom="true"
        android:layout_below="@+id/Contact"

        />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Cubewe Rubik&apos;s Solver"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="35dp" />

    <Button
        android:id="@+id/New"
        style="@style/btnStyleOrange"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Title"
        android:layout_marginTop="39dp"

        android:text="Solve 2D!" />

    <Button
        android:id="@+id/threed"
        style="@style/btnStyleOrange"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/New"
        android:layout_marginTop="20dp"

        android:text="Solve 3D!" />

    <Button
        android:id="@+id/Contact"
        style="@style/btnStyleBeige"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@id/threed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:text="Cube Notations" />

</RelativeLayout>